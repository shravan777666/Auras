# Database Configuration
MONGODB_URI=your_mongodb_connection_string

# Server Configuration
PORT=10000
NODE_ENV=production
BASE_URL=https://auracare-backend.onrender.com

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_CALLBACK_URL=https://auracare-backend.onrender.com/api/auth/google/callback

# Email Configuration (Gmail)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM="Auracare Beauty Parlor" <noreply@auracare.com>

# Frontend URL for production
FRONTEND_URL=https://auracare-frontend.onrender.com

# Admin Default Credentials
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_admin_password_here

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Secret (for express-session)
SESSION_SECRET=your_session_secret_here

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# ML Service Configuration
ML_SERVICE_URL=http://localhost:5001
ML_SERVICE_TIMEOUT=5000